<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/userInfo"
        android:background="@drawable/title_box"
        >
        <LinearLayout
            android:id="@+id/setting_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/main_sub3_my_schedule_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calender"
            android:clickable="true"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 스케쥴"
            android:textSize="10dp"
            android:textColor="@color/high_blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/setting_title"
            android:layout_weight="1.5"
            android:gravity="center">
        <TextView
            android:id="@+id/main_sub3_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_alignParentRight="true"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/main_sub3_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email.net"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp">
        <TextView
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_sub3_first_menu"
            android:textSize="@dimen/main_app_name_size"
            android:background="@drawable/title_box2"/>
        <TextView
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_sub3_second_menu"
            android:textSize="@dimen/main_app_name_size"
            android:background="@drawable/title_box"/>
        <TextView
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_sub3_third_menu"
            android:textSize="@dimen/main_app_name_size"
            android:background="@drawable/title_box"/>
        <TextView
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_sub3_fourth_menu"
            android:textSize="@dimen/main_app_name_size"
            android:background="@drawable/title_box"/>
    </LinearLayout>
</LinearLayout>