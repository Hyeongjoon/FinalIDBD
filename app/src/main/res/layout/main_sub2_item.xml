<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <android.support.v7.widget.CardView
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_marginLeft="@dimen/activity_horizontal_margin"
       android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       card_view:cardCornerRadius="4dp"
       >
       <LinearLayout
           android:id="@+id/main_sub2_item_layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"

           >
       <RelativeLayout
           android:id="@+id/main_sub2_item_layout2"
           android:paddingBottom="@dimen/activity_vertical_margin"
           android:paddingTop="@dimen/activity_vertical_margin"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"

           >
           <TextView
               android:id="@+id/main_sub_2_gr_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="@dimen/activity_horizontal_margin"
               android:textAlignment="center"
               android:text="null"
               />
           <ImageView
               android:id="@+id/main_sub2_gr_btn"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/temp_group_btn"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/activity_horizontal_margin"
               android:layout_alignBottom="@id/main_sub_2_gr_name"
               android:clickable="true"
               />
           <TextView
               android:id="@+id/main_sub_2_gr_num"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:layout_toLeftOf="@id/main_sub2_gr_btn"
               android:layout_marginRight="@dimen/activity_horizontal_margin"
               android:text="0"

               />
           <View
               android:id="@+id/main_sub2_gr_color"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_toLeftOf="@id/main_sub_2_gr_num"
               android:layout_marginRight="@dimen/activity_horizontal_margin"
               />

       </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/main_sub2_item_layout3"
                   android:paddingBottom="@dimen/main_sub2_item_innerPadding"
                   android:paddingTop="@dimen/main_sub2_item_innerPadding"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"

                   >
                   <TextView
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="새 파일"
                       />
                <Button
                    android:id="@+id/new_file_num_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/main_sub2_item_layout4"
                   android:paddingBottom="@dimen/main_sub2_item_innerPadding"
                   android:paddingTop="@dimen/main_sub2_item_innerPadding"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical"

                   >
                   <TextView
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="새 채팅"
                       />
                   <Button
                       android:id="@+id/new_chat_num_btn"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       />
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
   </android.support.v7.widget.CardView>
</LinearLayout>