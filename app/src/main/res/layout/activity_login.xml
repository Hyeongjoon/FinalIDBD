<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.idbd.admin.myapplication.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/base"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_main"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="135dp"/>

    <EditText
        android:id="@+id/login_email"
        android:layout_width="214dp"
        android:layout_height="35dp"
        android:hint="@string/input_email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_outline1"
        android:paddingLeft="10dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/pink"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/white_trans50"
        android:textCursorDrawable="@drawable/color_cursor"
        />

    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="214dp"
        android:layout_height="35dp"
        android:hint="@string/input_pwd"
        android:inputType="textPassword"
        android:background="@drawable/edittext_outline1"
        android:paddingLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/white_trans50"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColor="@color/pink"
        />

    <Button
        android:id="@+id/login_login_btn"
        android:layout_gravity="center"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:text="@string/login_btn"
        android:layout_marginTop="57dp"
        android:background="@drawable/button_outline1"
        android:textColor="@color/pink"
        android:typeface="monospace"
        android:textSize="14dp" />

    <Button
        android:id="@+id/login_sign_up_btn"
        android:layout_gravity="center"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:text="@string/sign_up_btn"
        android:layout_marginTop="7dp"
        android:background="@drawable/chat_send_selector2"
        android:textColor="@color/white"
        android:typeface="monospace"
        android:textSize="14dp"
        />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/login_find_pwd"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/login_find_pwd"
        android:textColor="@color/white_trans80" />
</LinearLayout>
</ScrollView>
