<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_upload_date"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/file_upload_name"
            android:text="null"
            />
        <ImageView
            android:id="@+id/file_dialog_image"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/temp_group_btn"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_toLeftOf="@id/file_dialog_image"
            android:id="@+id/file_down_image"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/idbd_down_icon"
            />
    </RelativeLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/file_image_view"
    />
</LinearLayout>