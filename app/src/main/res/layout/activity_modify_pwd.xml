<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idbd.admin.myapplication.ModifyPwdActivity"
    android:orientation="vertical"
    android:background="@drawable/base">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_main"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>

    <TextView
        android:textSize="12dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textColor="@color/white"
        android:text="@string/find_pwd_info"
        android:background="@drawable/textbox1"/>

    <EditText
        android:id="@+id/find_code_input"
        android:layout_width="214dp"
        android:layout_height="35dp"
        android:hint="@string/code_input"
        android:background="@drawable/edittext_outline1"
        android:paddingLeft="10dp"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/white_trans50"/>

    <Button
        android:id="@+id/find_re_email_btn"
        android:layout_gravity="center"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:text="@string/find_re_email_btn"
        android:layout_marginTop="20dp"
        android:background="@drawable/chat_send_selector"
        android:textColor="@color/white_trans80"
        android:typeface="monospace"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/find_pwd_input"
        android:layout_width="214dp"
        android:layout_height="35dp"
        android:hint="@string/input_pwd"
        android:background="@drawable/edittext_outline1"
        android:paddingLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/white_trans50"/>

    <EditText
        android:id="@+id/find_pwd_con_input"
        android:layout_width="214dp"
        android:layout_height="35dp"
        android:hint="@string/input_pwd_confirm"
        android:background="@drawable/edittext_outline1"
        android:paddingLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/white_trans50"/>

    <Button
        android:id="@+id/find_modify_pwd_btn"
        android:layout_gravity="center"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:text="@string/find_modify_pwd_btn"
        android:layout_marginTop="20dp"
        android:background="@drawable/chat_send_selector"
        android:textColor="@color/text_black"
        android:typeface="monospace"
        android:textSize="14dp" />

    <Button
        android:id="@+id/find_go_login"
        android:layout_gravity="center"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:text="@string/go_to_login"
        android:layout_marginTop="7dp"
        android:background="@drawable/chat_send_selector2"
        android:textColor="@color/white_trans80"
        android:typeface="monospace"
        android:textSize="14dp" />

</LinearLayout>
</ScrollView>