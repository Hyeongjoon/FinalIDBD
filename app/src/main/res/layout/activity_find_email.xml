<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idbd.admin.myapplication.FindEmailActivity"
    android:orientation="vertical"
    android:background="@drawable/base">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_main"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="135dp"/>


    <TextView
        android:textSize="12dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="@string/find_info"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/textbox1"/>

    <EditText
        android:id="@+id/find_email_input"
        android:layout_width="214dp"
        android:layout_height="35dp"
        android:hint="@string/input_email"
        android:background="@drawable/edittext_outline1"
        android:paddingLeft="10dp"
        android:layout_marginTop="30dp"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/white_trans50"/>

    <Button
        android:id="@+id/find_email_btn"
        android:layout_gravity="center"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:text="@string/find_pwd"
        android:layout_marginTop="57dp"
        android:background="@drawable/button_outline1"
        android:textColor="@color/text_black"
        android:typeface="monospace"
        android:textSize="14dp" />
    <Button
        android:id="@+id/find_go_login_btn"
        android:layout_gravity="center"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:text="@string/go_to_login"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_outline2"
        android:textColor="@color/white_trans80"
        android:typeface="monospace"
        android:textSize="14dp" />

</LinearLayout>
</ScrollView>